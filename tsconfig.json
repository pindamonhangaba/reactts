{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "app/*": [
        "./app/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "types": ["./node_modules/@types/node"]
}